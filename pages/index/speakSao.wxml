<!--speakSao.wxml-->
<view class="speakSao">
  <view class="top">树洞</view>
  <view class="speak">
    <view class="scroll">
      <view class="word" wx:for="{{comments}}">
        <image class="pic"/>
        <view class="words">
          <text class="comment">{{item.content}}</text>
          <view class="replys">
            <view class="reply" wx:for="{{item.replies}}">
              <text class="words">{{item.replyContent}}</text>
              <text class="id">李英豪</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="bottom">
    <input type="text" placeholder="说上两句悄悄话吧！"></input>
    <button class="submit">发送</button>
  </view>
</view>