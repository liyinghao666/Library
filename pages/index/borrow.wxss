/* pages/index/borrow.wxss */
view {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
.borrow {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.borrow .search {
  width: 100%;
  text-align: center;
  justify-self: flex-start;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.borrow .search .input {
  box-sizing: border-box;
  flex: 1;
  margin: 5rpx 10rpx;
  padding: 10rpx;
  height: 80rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  border: #BDBDBD 5rpx solid;
  border-radius: 20rpx;
}
.borrow .search image {
  width: 80rpx;
  height: 80rpx;
}
.borrow .books {
  flex: 1;
  width: 100%;
  overflow: scroll;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.borrow .books .book {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.borrow .books .book .bookImg {
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  padding: 10rpx;
}
.borrow .books .book .intro {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-start;
  flex: 0.7;
  min-height: 200rpx;
}
.borrow .books .book .ban {
  flex: 0.3;
  box-sizing: border-box;
  font-size: 16px;
  margin-right: 10rpx;
  min-width: 48px;
  height: 80rpx;
  box-shadow: gray 5rpx 5rpx;
  background-color: red;
}
.borrow .books .book .allow {
  flex: 0.3;
  box-sizing: border-box;
  font-size: 16px;
  margin-right: 10rpx;
  min-width: 48px;
  height: 80rpx;
  box-shadow: gray 5rpx 5rpx;
  background-color: greenyellow;
}