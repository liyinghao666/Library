.load {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.line {
  width: 100%;
  height: 1px;
  border-bottom: gray solid 1px;
}
.usermessage {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.usermessage input,.usermessage picker {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  margin: 10rpx 0;
  border: grey 5rpx solid;
  border-radius: 40rpx;
}
.usermessage text {
  align-self: flex-start;
  font-size: 50rpx;
}
.usermessage .info {
  text-indent: 2rem;
}
.btn {
  margin-top: 20rpx;
}